<div class="chat-message" id="chatMessage">
  <div class="chat-accessory">
    <div class="govuk-grid-column-three-quarters">
      <span class="message-owner govuk-body-l govuk-!-font-weight-bold">
        <span class="message-icon">{% include "components/message-icon.njk" %}</span>
        Farming funding assistant
      </span>
    </div>
    <div class="chat-actions govuk-grid-column-one-quarter govuk-!-display-none-print">
      <button type="button" class="defraButton govuk-button" id="copyButton" aria-label="Copy">
        {% include "components/icon-copy.njk" %}
      </button>
      <button type="button" class="defraButton govuk-button" id="printButton" aria-label="Print">
        {% include "components/icon-printer.njk" %}
      </button>
    </div>
  </div>
  <div class="answer govuk-body">
    {{ params.answer }}
  </div>
  <div class="govuk-body">

    <ul class="cards">
      {% for item in params.items %}
        <li class="card-item">
          <h3 class="govuk-heading-s">
            <a href="{{ item.url }}" class="govuk-link">{{ item.title }}</a>
          </h3>
          <p>{{ item.summary }}</p>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>