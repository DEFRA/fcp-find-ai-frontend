{% extends '_layout.njk' %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "#"
      }]
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">Farming funding assistant</h1>

      {{ govukWarningText({
        text: "You must personally check results from this service before passing on any information",
        iconFallbackText: "Warning"
      }) }}

      <p class="govuk-body">
        Use this tool to help callers with questions about funding from the Farming and Countryside programme
      </p>

      <h2 class="govuk-heading-m">How can I assist you today?</h2>

      <p class="govuk-body">In your own words enter:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>
          a keyword
        </li>
        <li>
          the name of a grant
        </li>
        <li>
          any themes or topics that are of interest
        </li>
      </ul>

      <p class="govuk-body">For example, I want to find funding options for boundaries and Arable land.</p>

      {{ govukInput({
        hint: {
          text: "Prompt 1"
        },
        id: "prompt-id",
        name: "prompt-name"
      }) }}

      {{ govukButton({
        text: "Send"
      }) }}
    </div>
    <div class="govuk-grid-column-one-third">
      <aside class="app-related-items" role="complementary"></aside>

    </div>
  </div>
{% endblock %}